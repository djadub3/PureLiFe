<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.andy.purelifefinal.HomeFragment"
    android:padding="0dp"
    android:layout_margin="0dp"
    android:background="?attr/colorControlHighlight">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        card_view:cardCornerRadius="4dp"
        android:layout_weight=".8"
        android:layout_margin="2dp"
        android:layout_height="0dp"
        card_view:cardBackgroundColor="?android:attr/colorBackground">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="?android:attr/windowBackground">

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".4" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".1" />

                    <com.cardiomood.android.controls.gauge.BatteryIndicatorGauge
                        android:layout_height="0dp"
                        android:layout_width="match_parent"
                        android:id="@+id/batteryGaugeView"
                        android:background="@android:color/transparent"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:layout_weight="1.5"
                        android:paddingLeft="0dp"
                        android:paddingRight="0dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="0dp" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".1" />

                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:fadingEdgeLength="10dp"
                    android:scaleX="0"
                    android:alpha="0" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.5"
                    android:paddingLeft="10dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".3" />

                    <TextView
                        android:text="Battery Information"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/textView7"
                        android:layout_weight="1.1"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                        android:textSize="18sp"
                        android:textStyle="normal|bold"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="4dp"
                        android:textColor="@color/colorSecondaryText" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="0dp">

                        <TextView
                            android:text="Voltage:"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:id="@+id/textView8"
                            android:layout_weight=".7"
                            android:textAppearance="@android:style/TextAppearance.Material.Small"
                            android:textStyle="normal|bold"
                            android:paddingTop="0dp"
                            android:paddingBottom="0dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="0dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:id="@+id/batteryVoltageText"
                            android:layout_weight="1"
                            android:textAppearance="@android:style/TextAppearance.Material.Small"
                            android:paddingTop="0dp"
                            android:paddingBottom="0dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="0dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="0dp">

                        <TextView
                            android:text="Level:"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView10"
                            android:layout_weight=".7"
                            android:textAppearance="@android:style/TextAppearance.Material.Small"
                            android:textStyle="normal|bold"
                            android:paddingTop="0dp"
                            android:paddingBottom="0dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="0dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/capacity_text"
                            android:layout_weight="1"
                            android:textAppearance="@android:style/TextAppearance.Material.Small"
                            android:paddingTop="0dp"
                            android:paddingBottom="0dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="0dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="0dp">

                        <TextView
                            android:text="Status:"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".7"
                            android:textStyle="normal|bold"
                            android:paddingTop="0dp"
                            android:paddingBottom="0dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="0dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/charging_text"
                            android:layout_weight="1"
                            android:paddingTop="0dp"
                            android:paddingBottom="0dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="0dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="0dp">

                        <TextView
                            android:text="Health:"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:id="@+id/textView14"
                            android:layout_weight=".7"
                            android:textStyle="normal|bold"
                            android:paddingTop="0dp"
                            android:paddingBottom="0dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="0dp" />

                        <TextView
                            android:text="Good"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:id="@+id/textView13"
                            android:layout_weight="1"
                            android:paddingTop="0dp"
                            android:paddingBottom="0dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginBottom="0dp" />

                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".3" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        card_view:cardCornerRadius="4dp"
        android:layout_weight=".8"
        android:layout_margin="2dp"
        android:layout_height="0dp"
        card_view:cardBackgroundColor="?android:attr/colorBackground">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Daily Stats"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/textView16"
                android:layout_weight=".2"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textStyle="normal|bold"
                android:textColor="@color/colorSecondaryText" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".05" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".8">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:text="Energy   Generated"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/textView18"
                        android:layout_weight=".4"
                        android:textStyle="normal|bold"
                        android:textAlignment="center" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".2" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/energy_generated_text"
                        android:layout_weight=".7"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textSize="24sp"
                        android:textAlignment="center" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="@color/colorDivider"
                    android:paddingBottom="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingTop="10dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:text="Energy   Consumed"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/textView20"
                        android:layout_weight=".4"
                        android:textStyle="normal|bold"
                        android:textAlignment="center" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".2" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/consumed_energy_text"
                        android:layout_weight=".7"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textSize="24sp"
                        android:textAlignment="center" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="@color/colorDivider"
                    android:paddingBottom="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingTop="10dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:text="Amp Hours Stored"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/textView22"
                        android:layout_weight=".4"
                        android:textStyle="normal|bold"
                        android:textAlignment="center" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".2" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/amp_hours_stored_text"
                        android:layout_weight=".7"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textSize="24sp"
                        android:textAlignment="center" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        card_view:cardCornerRadius="4dp"
        android:layout_weight="1.5"
        android:layout_margin="2dp"
        android:layout_height="0dp"
        card_view:cardBackgroundColor="?android:attr/colorBackground">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Live Power"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/textView15"
                android:layout_weight=".1"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textStyle="normal|bold"
                android:textColor="@color/colorSecondaryText" />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="5dp" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
