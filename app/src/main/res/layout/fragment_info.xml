<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.andy.purelifefinal.InfoFragment"
    android:background="@color/cardview_light_background">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:text="The PURE LiFE Generator"
            android:layout_width="match_parent"
            android:id="@+id/textView2"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@color/colorSecondaryText"
            android:textAlignment="center"
            android:layout_height="0dp"
            android:layout_weight=".07"
            android:textSize="18sp"
            android:paddingTop="5dp" />

        <TextView
            android:text="	The PURE LiFe generator and this app have been designed and built by Team PURE LiFE for our Electrical Engineering capstone project at Northern Arizona University. We will be entering our design in the Internet of Science and Engineering task of the 2017 International Environmental Engineering competition held by New Mexico State University. "
            android:layout_width="match_parent"
            android:id="@+id/textView3"
            android:textAlignment="viewStart"
            android:layout_height="0dp"
            android:layout_weight=".22" />

        <TextView
            android:text="@string/more_info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/more_info"
            android:clickable="true"
            android:textAlignment="center"
            android:layout_weight=".04" />

        <TextView
            android:text="Special thanks to our sponsors"
            android:layout_width="match_parent"
            android:id="@+id/textView11"
            android:layout_height="0dp"
            android:layout_weight=".05"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textColor="@color/colorSecondaryText" />

        <ImageView
            android:layout_width="match_parent"
            app:srcCompat="@drawable/bioenno_logo"
            android:id="@+id/imageView5"
            android:layout_weight=".2"
            android:layout_height="0dp" />

        <TextView
            android:text="For donating these quality components essential for the PURE LiFe Generator"
            android:layout_width="match_parent"
            android:id="@+id/textView12"
            android:layout_height="0dp"
            android:layout_weight=".07"
            android:textAlignment="center" />

        <TextView
            android:text="@string/battery"
            android:layout_width="match_parent"
            android:id="@+id/battery_link_text"
            android:clickable="true"
            android:layout_height="0dp"
            android:layout_weight=".04"
            android:textAlignment="center" />

        <TextView
            android:text="@string/charge_controller"
            android:layout_width="match_parent"
            android:id="@+id/charge_controller_link"
            android:clickable="true"
            android:layout_height="0dp"
            android:layout_weight=".04"
            android:textAlignment="center" />

        <TextView
            android:text="@string/solar_panel"
            android:layout_width="match_parent"
            android:id="@+id/solar_panel_link"
            android:clickable="true"
            android:layout_height="0dp"
            android:layout_weight=".04"
            android:textAlignment="center" />

        <ImageView
            android:layout_width="match_parent"
            app:srcCompat="@drawable/cclogo"
            android:id="@+id/imageView11"
            android:layout_height="0dp"
            android:layout_weight=".15"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp" />


    </LinearLayout>

</FrameLayout>
